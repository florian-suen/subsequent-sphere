  <MainBody>
    <section>
      <ul>
        {
          posts.map((post) => (
            <li class="relative">
              <a
                class="group flex flex-col gap-y-5  items-center"
                href={`/blog/${post.id}/`}
              >
                {post.data.heroImage && (
                  <Image
                    width={500}
                    height={160}
                    src={post.data.heroImage}
                    alt=""
                  />
                )}
                <h4 class="title">{post.data.title}</h4>
                <p class="date group-hover:text-red-600">
                  <FormattedDate date={post.data.pubDate} />
